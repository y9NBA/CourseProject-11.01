<Page x:Class="CP1101.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CP1101.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="MainPage">

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center">
                <ComboBox x:Name="EnterTable" Width="200" SelectionChanged="EnterTable_SelectionChanged"/>
            </StackPanel>

            <StackPanel Margin="50, 0" x:Name="DataPanel">

            </StackPanel>
        </StackPanel>
        
        <StackPanel x:Name="MainBtns" Margin="0, 0, 0, 75" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Margin="50, 0" Content="Создать" Width="75" Click="Create_Click"/>
            <Button Margin="50, 0" Content="Изменить" Width="75" Click="Edit_Click"/>
            <Button Margin="50, 0" Content="Удалить" Width="75" Click="Delete_Click"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button Content="Назад" Margin="5" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
