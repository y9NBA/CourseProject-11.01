<Page x:Class="CP1101.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CP1101.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button Content="Выйти" Margin="5" Click="Close_Click"/>
        </StackPanel>
        <StackPanel Margin="0, 50, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Логин" Width="100"/>
                <TextBox x:Name="Login" Width="150"/>
            </StackPanel>
            <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                <Label Content="Пароль" Width="100"/>
                <PasswordBox x:Name="Password" Width="150"/>
            </StackPanel>

            <Button Content="Войти" Margin="30, 50, 30, 10" Click="Auth_Click"/>
        </StackPanel>
    </Grid>
</Page>
